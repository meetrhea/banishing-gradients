---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "America's Finest AI News Source", image } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title} | Banishing Gradients</title>
    <meta name="title" content={`${title} | Banishing Gradients`} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Banishing Gradients`} />
    <meta property="og:description" content={description} />
    {image && <meta property="og:image" content={image} />}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | Banishing Gradients`} />
    <meta property="twitter:description" content={description} />
    {image && <meta property="twitter:image" content={image} />}

    <!-- Fonts - Georgia for headlines, system sans for body -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;900&display=swap" rel="stylesheet" />

    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="Banishing Gradients RSS" href="/rss.xml" />
  </head>
  <body class="bg-white text-gray-900 min-h-screen flex flex-col">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
